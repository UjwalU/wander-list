<% layout("./layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <body>
      <h1>Add New Listings</h1>
      <br />
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-4">
          <label for="title" class="form-label">Title </label>
          <input
            type="text"
            name="title"
            placeholder="Enter title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title Looks good!</div>
        </div>
        <br />
        <div class="mb-4">
          <lable for="description" class="form-label">Description </lable>
          <textarea
            name="description"
            placeholder="Enter Description"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please provide discription</div>
        </div>
        <br />
        <div class="mb-4">
          <label for="image" class="form-label">Upload Image </label>
          <input type="file" name="image" class="form-control" required />
        </div>

        <br />
        <div class="row">
          <div class="mb-4 col-md-4">
            <lable for="price" class="form-label">Price </lable>
            <input
              name="price"
              placeholder="Enter Price"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid Price</div>
          </div>
          <br />
          <div class="mb-4 col-md-8">
            <lable for="price" class="form-label">Country </lable>
            <input
              type="text"
              name="country"
              placeholder="Enter Country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country Should be valid</div>
          </div>
        </div>
        <br />
        <div class="mb-4">
          <lable for="location" class="form-label">Location </lable>
          <input
            type="text"
            name="location"
            placeholder="Enter Location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Location Should be valid</div>
        </div>
        <button class="btn btn-dark">Add</button>
      </form>
    </body>
  </div>
</div>
